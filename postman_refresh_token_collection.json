{
  "info": {
    "name": "Group 18 - Refresh Token API",
    "description": "Test collection cho tính năng Refresh Token",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"ten\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/signup",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "signup"]
        }
      }
    },
    {
      "name": "2. Login (Get Tokens)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.environment.set('accessToken', response.accessToken);",
              "    pm.environment.set('refreshToken', response.refreshToken);",
              "    console.log('Access Token saved:', response.accessToken.substring(0, 50) + '...');",
              "    console.log('Refresh Token saved:', response.refreshToken.substring(0, 50) + '...');",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "login"]
        }
      }
    },
    {
      "name": "3. Test Protected Route",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/profile?email=test@example.com",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "profile"],
          "query": [
            {
              "key": "email",
              "value": "test@example.com"
            }
          ]
        }
      }
    },
    {
      "name": "4. Refresh Access Token",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.environment.set('accessToken', response.accessToken);",
              "    pm.environment.set('refreshToken', response.refreshToken);",
              "    console.log('New Access Token:', response.accessToken.substring(0, 50) + '...');",
              "    console.log('New Refresh Token:', response.refreshToken.substring(0, 50) + '...');",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/refresh",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "refresh"]
        }
      }
    },
    {
      "name": "5. Test with New Token",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/profile?email=test@example.com",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "profile"],
          "query": [
            {
              "key": "email",
              "value": "test@example.com"
            }
          ]
        }
      }
    },
    {
      "name": "6. Logout (Revoke Token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/logout",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "logout"]
        }
      }
    },
    {
      "name": "7. Test Revoked Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/refresh",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "refresh"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api"
    }
  ]
}